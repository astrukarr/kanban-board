#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-push hooks
echo "ğŸš€ Running pre-push checks..."

# 1. Check for console.log statements
echo "ğŸ“ Checking for console.log statements..."
if grep -r "console\.log" src/ --exclude-dir=node_modules; then
  echo "âŒ Error: Found console.log statements! Please remove them before pushing."
  exit 1
fi

# 2. Run linting
echo "ğŸ§¹ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed! Please fix errors before pushing."
  exit 1
fi

# 3. Run tests with coverage
echo "ğŸ§ª Running tests with coverage..."
npm test -- --coverage --coverageThreshold.global.statements=50
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed or coverage too low! Please fix before pushing."
  exit 1
fi

# 4. Build application
echo "ğŸ—ï¸ Building application..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed! Please fix build errors before pushing."
  exit 1
fi

echo "âœ… All pre-push checks passed! Ready to push to GitHub."

{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["apps/kanban/.next/**", "!.next/cache/**", "dist/**", "packages/shared-types/dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "test-results/**"]
    },
    "typecheck": {
      "outputs": []
    },
    "e2e": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**"]
    }
  }
}

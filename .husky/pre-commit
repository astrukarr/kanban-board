#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-commit hooks
echo "ğŸ” Running pre-commit checks..."

# 1. Check for console.log statements
echo "ğŸ“ Checking for console.log statements..."
if grep -r "console\.log" src/ --exclude-dir=node_modules; then
  echo "âŒ Error: Found console.log statements! Please remove them before committing."
  exit 1
fi

# 2. Run linting
echo "ğŸ§¹ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed! Please fix errors before committing."
  exit 1
fi

# 3. Run tests
echo "ğŸ§ª Running tests..."
npm test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed! Please fix tests before committing."
  exit 1
fi

# 4. Build application
echo "ğŸ—ï¸ Building application..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed! Please fix build errors before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
